<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/roomLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="방 위치"/>

            <TextView
                android:id="@+id/roomExplainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="방소개 문구"
                android:textSize="16dp"
                android:textColor="#656262"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/roomType1Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="전월세"
                    android:textColor="#656262"/>

                <TextView
                    android:id="@+id/roomType2Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="건물형태"
                    android:textColor="#656262"/>

                <TextView
                    android:id="@+id/roomType3Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="방 갯수"
                    android:textColor="#656262"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>